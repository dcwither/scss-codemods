{
  "env": {
    "node": true
  },
  "globals": {
    "exit": true
  },
  "extends": ["standard", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-console": "error"
  },
  "overrides": [
    {
      "files": ["*.test.{js,ts}", "jest.setup.js"],
      "env": { "jest": true }
    }
  ]
}
